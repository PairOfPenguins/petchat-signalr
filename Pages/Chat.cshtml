@page "/"
@model petchat.Pages.ChatModel
@{
    ViewData["Title"] = "Chat";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10">
    <div class="w-full max-w-2xl bg-white shadow-xl rounded-2xl overflow-hidden">
        <div class="bg-indigo-600 text-white text-center py-4 px-6">
            <h2 class="text-2xl font-bold flex items-center justify-center"><i class="fas fa-comments mr-2"></i>Chat Room</h2>
            <button id="logoutBtn" class="absolute top-4 right-4 bg-white text-indigo-600 px-4 py-1 rounded-full shadow hover:bg-gray-100"><i class="fas fa-sign-out-alt mr-1"></i>Logout</button>
        </div>
        <div class="p-6 space-y-4 h-96 overflow-y-auto bg-gray-50" id="chatroom">
        </div>
        <div class="bg-gray-100 p-4">
            <div class="flex items-center space-x-2">
                <input type="text" id="message" class="flex-1 p-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Type your message...">
                <button id="sendBtn" class="bg-indigo-600 text-white px-6 py-2 rounded-full shadow hover:bg-indigo-700 disabled:opacity-50" disabled>
                    <i class="fas fa-paper-plane"></i> Send
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script src="/js/chat.js"></script>
<script src="/js/auth.js"></script>
